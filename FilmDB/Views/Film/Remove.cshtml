@model FilmDB.Models.FilmModel

@{
    ViewData["Title"] = "Remove";
}

<h1>Usuń film</h1>

<div>
    <h4>Informacje o filmie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
</div>
<form method="Post" asp-action="RemoveConfirm" asp-route-id="@Model.ID" >
    <input type="submit" value="Potwierdź usunięcie" class="btn btn-danger confirmButton"/ >
</form>
<div>
    <a asp-action="Index" class="btn btn-secondary returnButton">Powrót</a>
</div>
